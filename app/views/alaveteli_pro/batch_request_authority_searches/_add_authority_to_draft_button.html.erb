<%= form_for(draft,
             method: draft.id ? :put : :post,
             html: {class: 'add-authority-to-batch__form js-add-authority-to-batch-form'}) do |f| %>
  <% unless query.blank? %>
    <%= hidden_field_tag(:query, query) %>
  <% end %>
  <% body_ids_added.each do |id| %>
    <%= f.hidden_field(:public_body_ids, multiple: true, value: id) %>
  <% end %>
  <%= f.hidden_field(:public_body_ids, multiple: true, value: authority_id) %>
  <input type="submit"
         value="<%= _('+ Add') %>"
         class="add-authority-to-batch__form__submit js-add-authority-to-batch-submit">
<% end %>
