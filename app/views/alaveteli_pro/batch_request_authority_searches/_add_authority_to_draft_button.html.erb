<%= form_for(draft, method: draft.id ? :put : :post) do |f| %>
  <% unless query.blank? %>
    <%= hidden_field_tag(:query, query) %>
  <% end %>
  <% draft.public_body_ids.each do |id| %>
    <%= f.hidden_field(:public_body_ids, multiple: true, value: id) %>
  <% end %>
  <%= f.hidden_field(:public_body_ids, multiple: true, value: authority.id) %>
  <input type="submit" value="<%= _('+ Add') %>">
<% end %>
