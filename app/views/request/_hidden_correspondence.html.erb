<p id="hidden_message" class="hidden_message">
  <%- if !message.prominence_reason.blank? %>
    <%= _('This message has been hidden.') %>
    <%= message.prominence_reason %>
    <%= _('Please <a href="{{contact_url}}">contact us</a> if you have any questions.',
          :contact_url => help_contact_path.html_safe) %>
  <%- else %>
    <%= _("This message has been hidden. There are various reasons why we " \
             "might have done this, sorry we can't be more specific here.") %>
    <%= _('Please <a href="{{contact_url}}">contact us</a> if you have any questions.',
          :contact_url => help_contact_path.html_safe) %>
  <%- end %>
  <% if message.prominence == 'requester_only' %>
    <%= _('If you are the requester, then you may <a href="{{contact_url}}">' \
             'sign in</a> to view the message.',
          :contact_url => signin_url(:r => request.fullpath).html_safe) %>
  <% end %>
</p>
